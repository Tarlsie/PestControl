<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/pesContLinLay"
    tools:context="com.example.danielt.pestcontrol.PestConsultLog"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name Display"
            android:id="@+id/txtVPestControlNameDisplay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LIcense Num"
            android:id="@+id/txtVPestControlLicNumDisplay"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/txtVPestControlDateDisplay"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address "
            android:ems="10"
            android:id="@+id/txtVPestControlAddress"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/txtVPestControlNameDisplay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time In:"
            android:id="@+id/txVPestControlTimeInDisplay"
            android:layout_below="@+id/txtVPestControlAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press to set time"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:id="@+id/btnPestControlTime"
            android:paddingTop="-8dp"
            android:layout_toRightOf="@+id/txVPestControlTimeInDisplay"

            android:layout_alignTop="@+id/txVPestControlTimeInDisplay" />




        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has the Manager or Super allowed you permission to enter the property?"
            android:id="@+id/swtManagerPermission"
            android:layout_below="@+id/txVPestControlTimeInDisplay"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Widget.Switch"
            android:showText="true"
            android:textOn="YES"
            android:textOff="NO"
            />



        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you need to service the Common Areas?"
            android:id="@+id/swtServiceCommonAreas"
            android:layout_below="@+id/swtManagerPermission"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Widget.Switch"
            android:showText="true"
            android:textOn="YES"
            android:textOff="NO"
            />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press to continue"
        android:id="@+id/BtnMaintenceLog1"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
